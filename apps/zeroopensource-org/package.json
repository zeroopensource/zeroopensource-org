    "fumadocs-mdx": "14.1.0",
    "fumadocs-ui": "16.2.5",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.561.0",
    "next": "16.0.10",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.5",
    "radix-ui": "^1.4.3",
    "react": "19.2.1",
    "react-day-picker": "^9.12.0",
    "react-dom": "19.2.1",
