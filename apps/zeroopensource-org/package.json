    "@radix-ui/react-slot": "^1.2.3",
    "@zxcvbn-ts/core": "^3.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "embla-carousel-react": "^8.6.0",
