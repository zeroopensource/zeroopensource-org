{
  "name": "@zeroopensource/zero-zerocn",
  "shortName": "ZeroCN",
  "description": "Shadcn registry made by Zero",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://zerocn.zeroopensource.org",
  "repository": "https://github.com/zeroopensource/zero-zerocn",
  "scripts": {
    "build": "pnpm fix:copy-readme && pnpm build:registry && next build && pnpm fix:next-out ",
    "dev": "next dev",
    "start": "next start",
    "types:check": "fumadocs-mdx && tsc --noEmit",
    "postinstall": "fumadocs-mdx",
    "serve": "pnpm build && serve out",
    "fix:next-out": "tsx scripts/fix-next-out.ts",
    "fix:copy-readme": "tsx scripts/copy-readme.ts",
    "shadcn": "shadcn",
    "shadcn:addAll": "pnpm shadcn add https://zerocn.zeroopensource.org/r/all.json",
    "shadcn:addAllLocal": "pnpm shadcn add https://localhost:3000/r/all.json",
    "build:registry": "shadcn build",
    "next": "next"
  },
  "dependencies": {
