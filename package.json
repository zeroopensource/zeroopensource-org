{
  "name": "zeroopensource-org-mono",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "start": "turbo start",
    "build": "turbo build",
    "lint": "turbo run lint",
    "check-types": "turbo check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check": "biome check --write .",
    "build:force": "turbo build --force"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.2.2",
    "ultracite": "5.3.3"
  },
  "packageManager": "pnpm@10.26.1"
}
